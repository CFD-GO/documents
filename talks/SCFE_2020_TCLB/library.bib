doi = {10.1103/PhysRevE.89.043308},
file = {:home/ggruszczynski/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Li et al. - 2014 - Conjugate heat and mass transfer in the lattice Boltzmann equation method.pdf:pdf},
issn = {15502376},
