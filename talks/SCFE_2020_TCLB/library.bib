doi = {10.1016/j.ijheatmasstransfer.2015.04.064},
file = {:home/ggruszczynski/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Guo et al. - 2015 - Lattice Boltzmann method for conjugate heat and mass transfer with interfacial jump conditions.pdf:pdf},
issn = {00179310},
